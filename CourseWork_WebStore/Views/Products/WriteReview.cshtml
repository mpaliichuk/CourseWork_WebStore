@model dynamic

@{
    var product = ViewData["Product"] as Product;
    var userId = ViewData["UserId"] as int?;
    var reviews = ViewData["Reviews"] as List<Review>;
    var user = ViewData["User"] as User;
    var allUsers = ViewData["AllUsers"] as List<User>;
}

<h2>@product.Name</h2>
@if (!string.IsNullOrEmpty(product.PictureUrl))
{
    <img src="@product.PictureUrl" alt="@product.Name" class="product-image" style="max-width: 100px; max-height: 100px;" />
}
<p>@product.Description</p>

@{
    double averageRating = 0.0;
    if (reviews != null && reviews.Any())
    {
        averageRating = reviews.Average(r => r.Rating);
    }
}

<p>Average Rating: @(averageRating != 0.0 ? averageRating.ToString("0.0") : "No rating")</p>
<h3>Reviews:</h3>
@foreach (var review in reviews)
{
    <div>
        <p>Rating: @review.Rating</p>
        <p>Comment: @review.Comment</p>
        @{
            var reviewUser = allUsers.FirstOrDefault(u => u.UserId == review.UserId);
            if (reviewUser != null)
            {
                <p>Posted By: @reviewUser.FirstName @reviewUser.LastName</p>
            }
            else
            {
                <p>Posted By: Unknown User</p>
            }
        }
    </div>
    <hr />
}
<h3>Write a Review:</h3>
<form asp-action="SubmitReview" asp-controller="Products" method="post">
    <input type="hidden" name="ProductId" value="@product.ProductId" />
    <input type="hidden" name="UserId" value="@userId" />
    <div>
        <label for="Rating">Rating:</label>
        <input type="number" id="Rating" name="Rating" min="1" max="5" required />
    </div>
    <div>
        <label for="Comment">Comment:</label>
        <textarea id="Comment" name="Comment" required></textarea>
    </div>
    <button type="submit">Submit Review</button>
</form>
