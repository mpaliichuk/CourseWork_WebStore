@model IEnumerable<CourseWork_WebStore.Models.Order>

<h1 style="padding-top:10%">Orders</h1>

<table class="table" style="padding-top:10%">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount</td>
                <td>
                    @if (order.Status == "Pending")
                    {
                        <form asp-action="PayOrder" asp-route-id="@order.OrderId">
                            <button type="submit" class="btn btn-success">Pay Order</button>
                        </form>
                        <form asp-action="CancelOrder" asp-route-id="@order.OrderId">
                            <button type="submit" class="btn btn-danger">Cancel Order</button>
                        </form>
                        <form asp-action="DeleteOrder" asp-route-id="@order.OrderId">
                            <button type="submit" class="btn btn-warning">Delete Order</button>
                        </form>
                        <form asp-action="ShowOrderItems" asp-route-orderId="@order.OrderId">
                            <button type="submit" class="btn btn-secondary">Show Order Items</button>
                        </form>
                    }
                    else
                    {
                        <span>Order cannot be modified.</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
